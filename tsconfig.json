{
  "compileOnSave": false,
  "compilerOptions": { 
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false, 
    "downlevelIteration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node", 
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": ["node"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "allowSyntheticDefaultImports": true
  }
}
